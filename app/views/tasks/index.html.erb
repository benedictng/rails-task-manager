<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>
<ol>
  <% @tasks.each do |task| %>
  <li>
    <p><%= task.title %>(<%= task.completed ? 'done' : 'not done yet' %>)</p>
    <%= link_to 'More details', task_path(task) %>
    <%= link_to 'Edit', edit_task_path(task) %>
    <%= link_to 'Delete', task_path(task), method: :delete %>
  </li>
  <% end %>
</ol>
